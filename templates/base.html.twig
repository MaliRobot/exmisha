<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ex>Misha{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="nav">
                <div class="container">
                    <div class="logo">
                        <a href="#">Your Logo</a>
                    </div>
                    <div id="mainListDiv" class="main_list">
                        <ul class="navlinks">
                            <li><a href="/">Home</a></li>
                            <li><a href="{{ path('media') }}">Media</a></li>
                            <li><a href="{{ path('releases') }}">Releases</a></li>
                            <li><a href="{{ path('about') }}">About</a></li>
                        </ul>
                    </div>
                    <span class="navTrigger">
                <i></i>
                <i></i>
                <i></i>
            </span>
                </div>
            </nav>

            <!-- Function used to shrink nav bar removing paddings and adding black background -->
            <script>
                $(window).scroll(function() {
                    if ($(document).scrollTop() > 50) {
                        $('.nav').addClass('affix');
                        console.log("OK");
                    } else {
                        $('.nav').removeClass('affix');
                    }
                });
            </script>
        </header>
        {% block body %}
            <div id="fb-root"></div>
            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v9.0&appId=1078184995561188&autoLogAppEvents=1" nonce="ZO3kV7Yd"></script>
            <main>
                {% block content %}{% endblock %}
            </main>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <footer>
            Ex>Misha 2020
        </footer>
    </body>
</html>
